{
  "manifest_version": 3,
  "name": "Hacker News",
  "version": "3.21.0",
  "description": "Displays recent stories from Hacker News",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Hacker News",
    "default_icon": "icon18.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://news.ycombinator.com/*"
  ]
}
